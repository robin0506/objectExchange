/* pages/index_c/index.js.wxss */

.modal{
  position: absolute;
  top:0;
  bottom:0;
  left: 0;
  right: 0;
  background: #fff;
}

.objects{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.object {
  margin-top: 30rpx;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.object-pic{
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
}

.object-picture{
  width: 100%;
  height: 100%;
}

.details {
  margin-top: 10rpx;
  width: 300rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.title {
  margin-top: 8rpx;
  width: 100%;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}

.user-container{
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.user-portrait {
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
}

.user-nickname {
  margin-left: 10rpx;
  max-width: 240rpx;
  font-size: 24rpx;
}
