/* pages/index_c/index.js.wxss */

.objects{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.object {
  margin-top: 20rpx;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.object-pic{
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
}

.object-picture{
  width: 100%;
  height: 100%;
}

.details {
  margin-top: 10rpx;
  width: 300rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.user-container{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-portrait {
    width: 70rpx;
    height: 70rpx;
    border-radius: 45rpx;
}

.user-nickname {
  max-width: 240rpx;
  font-size: 24rpx;
}
