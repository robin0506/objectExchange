/* pages/add/index.wxss */
.modal{
  position: absolute;
  top:0;
  bottom:0;
  left: 0;
  right: 0;
  background: #fff;
}

.container {
  width: 100%;
}
.title-container{
  margin-top:50rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 80rpx;
}
.title {
  padding: 0 20rpx;
  font-size: 36rpx;
}
.title-content{
  padding: 0 10rpx;
  background: #fff;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 36rpx;
  width: 300rpx;
  border-radius:4rpx;
  overflow: hidden;
}

.pic-container {
  margin-top:30rpx;
  padding:30rpx;
  display:flex;
  width:100%;
  box-sizing: border-box;
}

.pic{
  width: 250rpx;
  height: 250rpx;
}
.pic image {
  width:100%;
  height: 100%;
  border-radius: 16rpx;
}
.add-btn {
  padding: 20rpx;
  width: 150rpx;
}
.submit {
  margin-top:30vh;
}

.check-text{
  padding: 30rpx;
}