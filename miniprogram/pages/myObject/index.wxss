/* pages/myObject/index.wxss */


.top-container{
  padding: 30rpx;
  display:flex;
  align-items: center;
}

.top-portrait {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
}

.top-title{
  padding: 30rpx;
  text-align:center;
}
.objects{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.object {
  margin-top: 20rpx;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.object-pic{
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
}

.object-picture{
  width: 100%;
  height: 100%;
}

.details {
  margin-top: 10rpx;
  width: 300rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.title {
  height: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-bor-orient: vertical;
}

.hint{
  width:100%;
  margin-top:30vh;
  text-align:center;
  color: #333;
}