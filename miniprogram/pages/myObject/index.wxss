/* pages/myObject/index.wxss */

.manage-btn{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #222;
  border-radius: 16rpx;
  margin-left: 100rpx;
  text-align:center;
}

.top-container{
  padding: 30rpx;
  display:flex;
  align-items: center;
}

.top-portrait {
  width: 90rpx;
  height: 90rpx;
  border-radius: 45rpx;
  max-width: 300rpx;
}

.top-title{
  padding: 30rpx;
  text-align:center;
}
.objects{
  display: flex;
  width: 100%;
  flex-wrap: wrap;
}

.object {
  margin-top: 20rpx;
  width: 50%;
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.object-modal{
  position:absolute;
  background:rgba(0,0,0,0.5);
  top:0;
  right: 0;
  bottom: 0;
  left: 0;
  display:flex;
  align-items:center;
  justify-content: space-around;
}

.object-modal image{
  width:50rpx;
  height: 50rpx;
  padding: 20rpx;
  background:#ffffff;
  border-radius: 50%;
}

.object-modal .img-container{
  padding: 20rpx;
}

.object-pic{
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: #fff;
  position: relative;
}

.object-picture{
  width: 100%;
  height: 100%;
}

.details {
  margin-top: 10rpx;
  width: 300rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.title {
  height: 80rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-bor-orient: vertical;
}

.hint{
  width:100%;
  margin-top:30vh;
  text-align:center;
  color: #333;
}